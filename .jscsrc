{
    "plugins": ["jscs-bem"],
    "preset": "bem",
    "disallowMultipleVarDecl": true,
    "requireMultipleVarDecl" : null,
    "requireSemicolons": true,

    "excludeFiles": [
        "frontend/.bem/cache/**",
        "frontend/.enb/**",
        ".git/**",
        "frontend/*.docs/**",
        "frontend/*.examples/**",
        "frontend/*.specs/**",
        "frontend/*.tmpl-specs/**",
        "frontend/*.tests/**",
        "frontend/*.pages/**",
        "frontend/**/*.i18n/**",
        "frontend/libs/**",
        "frontend/static/**",
        "frontend/*.bundles/**",
        "node_modules/**",
        "config",
        "seeds.disable"
    ],
    "fileExtensions": [".js", ".bemtree", ".bemhtml"]
}
