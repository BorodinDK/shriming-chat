block('editable-title')(
    content()(function(){
        return applyCtx([
            {
                block : 'editable-title',
                elem : 'title'
            },
            {
                block : 'input',
                mix : { block : 'editable-title', elem : 'input' },
                mods : { theme : 'shriming', size : 's', width : 'available' },
                maxLength : 250,
                placeholder : 'Введите тему канала'
            },
            {
                block : 'spin',
                mix : { block : 'editable-title', elem : 'spin' },
                mods : { theme : 'shriming', size : 's', visible : true }
            }
        ]);
    })
);
