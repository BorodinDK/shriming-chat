.landing__image
    display block
    max-width 70%
    position relative
    right -12vw
    transform translateZ(0)

    @media screen and (max-width: 800px)
        &
            display none

    @media screen and (max-height: 500px)
        &
            right 0
            margin-left 50px
            max-width 40%

    @media screen and (max-height: 700px) and (min-width: 1500px)
        &
            align-self flex-start
            right 0
            margin-left 50px
            width 60%

