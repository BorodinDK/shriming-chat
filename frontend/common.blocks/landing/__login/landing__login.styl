.landing__login
    display inline-block
    color white
    font-size 13px
    font-weight 600
    padding 13px 20px 13px 50px
    text-decoration none
    background-color $accent_color
    border-radius 5px
    text-transform uppercase
    position relative

    &:before
        content ''
        display inline-block
        position absolute
        top 10px
        left 18px
        width 20px
        height 20px
        background url(slack_icon_white.svg)
        background-size 20px
