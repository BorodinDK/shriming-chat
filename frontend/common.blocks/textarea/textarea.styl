.textarea
    width 100%
    height inherit
    resize none
    box-sizing border-box
    display block
    border none
    font 13px Arial
    padding: 9px 40px 9px 8px;
    outline none
    border-top 1px solid #efefef
    background $light_gray_color
    color $black_text_color
    line-height 35px

.textarea:focus
    box-shadow inset 0 0 0 2px $primary_color
